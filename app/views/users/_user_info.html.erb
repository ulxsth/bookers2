<div class='col-md-3'>
  <h2>User Info</h2>
  <%= image_tag user.get_image(100, 100) %>
  <table class='table'>
    <tr>
      <th>name</th>
      <th>
        <%= user.name %>
      </th>
    </tr>
    <tr>
      <th>introduction</th>
      <th>
        <%= user.introduction %>
      </th>
    </tr>
  </table>
  
  <div class='row'>
    <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block edit_user_89823' do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
  
  <h2>New Book</h2>
  <!-- エラー表示部 -->
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this model from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= form_with model: @book do |form| %>
    <div class='form-group'>
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= form.submit 'Create Books', class: 'btn btn-mb btn-success' %>
    </div>
  <% end %>
</div>