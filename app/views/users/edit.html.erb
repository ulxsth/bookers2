<div class='container'>
  <div class='row'>
    <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto'>
      <h2>User Info</h2>
      
      <!-- エラー表示部 -->
      <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this model from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      
      <%= form_with model: @user do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= form.label :profile_image %><br>
          <%= form.file_field :profile_image, accept: "image/*", class: 'form-control-image' %>
        </div>
        
        <div class="form-group">
          <%= form.label :introduction %>
          <%= form.text_area :introduction, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= form.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>