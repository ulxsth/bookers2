<div class='container'>
  <div class='row'>
    <%= render 'user_info', user: current_user %>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table'>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100, 100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>