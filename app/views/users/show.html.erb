<div class='container'>
  <div class='row'>
    <%= render 'user_info', user: @user %>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table'>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @user.books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag @user.get_profile_image(100, 100) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>