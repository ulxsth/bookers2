<div class='container'>
  <div class='row'>
    <%= render 'users/user_info' %>

    <div class='col-md-8 offset-md-1'>
      <h2>Book Detail</h2>
      <table class='table'>
        <tr>
          <td>
            <%= link_to @book.user do %>
              <%= image_tag @book.user.get_image(100, 100) %><br>
              <%= @book.user.name %>
            <% end %>
            </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
        </tr>
      </table>
    </div>
  </div>
</div>