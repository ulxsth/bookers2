<div class='container'>
  <div class='row'>
  <%= render 'users/user_info' %>
  
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table'>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.get_image(100, 100) %></td>
            <td>
              <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>