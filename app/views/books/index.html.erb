<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User Info</h2>
      <%= image_tag current_user.get_image(100, 100) %>
      <table class='table'>
        <tr>
          <th>name</th>
          <th>
            <%= current_user.name %>
          </th>
        </tr>
        <tr>
          <th>introduction</th>
          <th>
            <%= current_user.introduction %>
          </th>
        </tr>
      </table>
      
      <div class='row'>
        <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block edit_user_89823' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      
      <h2>New Book</h2>
      <%= form_with model: @book do |form| %>
        <div class='form-group'>
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= form.label :body %>
          <%= form.text_area :body, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= form.submit 'Create Books', class: 'btn btn-mb btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>